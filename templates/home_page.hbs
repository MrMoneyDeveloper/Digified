<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<div id="tsparticles"></div>

<main id="main-content" class="home-main homepage-sections">
  <section class="dbpo-hero">
    {{#if settings.homepage_background_image}}
      <div class="dbpo-hero-bg" style="background-image:url('{{settings.homepage_background_image}}');"></div>
    {{else}}
      {{#if settings.home_hero_image_url}}
        <div class="dbpo-hero-bg" style="background-image:url('{{settings.home_hero_image_url}}');"></div>
      {{else}}
        <div class="dbpo-hero-bg" style="background-image:url('{{asset 'settings/Home_hero_image.jpg'}}');"></div>
      {{/if}}
    {{/if}}
    <div class="dbpo-hero-overlay"></div>
    <div class="container">
      <h1 class="dbpo-hero-title">Welcome to the <span class="dbpo-inline-brand">Digify BPO</span> Help Centre</h1>
      <p class="dbpo-hero-sub">Find help, report issues, read policies.</p>
      <div class="digify-cta-row">
        <a class="btn btn-primary" href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.external_support_form_id}}{{settings.external_support_form_id}}{{else}}23381214703004{{/if}}&tf_issue_type={{#if settings.network_issue_value}}{{settings.network_issue_value}}{{else}}network{{/if}}">
          Network Issue
        </a>
        <a class="btn btn-outline" href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.external_support_form_id}}{{settings.external_support_form_id}}{{else}}23381214703004{{/if}}&tf_issue_type={{#if settings.access_request_value}}{{settings.access_request_value}}{{else}}access{{/if}}">
          Access Request
        </a>
        <a class="btn btn-text" href="{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}">
          Read Policies
        </a>
      </div>
    </div>
  </section>

  <section class="quick-paths py-5">
    <div class="container">
      <h2 class="section-title">Get support <span>fast</span></h2>
      <div class="row g-4">
        <div class="col-12 col-md-4">
          <article class="feature-card card-dark h-100">
            {{#if settings.network_card_icon_url}}
              <img class="card-icon-img mb-3" src="{{settings.network_card_icon_url}}" alt="" role="presentation">
            {{else}}
              {{#if settings.card_icon_set_url}}
                <img class="card-icon-img mb-3" src="{{settings.card_icon_set_url}}" alt="" role="presentation">
              {{/if}}
            {{/if}}
            <h3>Network &amp; Access Requests</h3>
            <p>Fix connectivity issues or request new credentials. The form routes straight to CXI engineers.</p>
            <a class="link-cta" href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.external_support_form_id}}{{settings.external_support_form_id}}{{else}}23381214703004{{/if}}">
              Report or request now
            </a>
          </article>
        </div>
        <div class="col-12 col-md-4">
          <article class="feature-card card-light h-100">
            {{#if settings.policies_card_icon_url}}
              <img class="card-icon-img mb-3" src="{{settings.policies_card_icon_url}}" alt="" role="presentation">
            {{else}}
              {{#if settings.card_icon_set_url}}
                <img class="card-icon-img mb-3" src="{{settings.card_icon_set_url}}" alt="" role="presentation">
              {{/if}}
            {{/if}}
            <h3>Policies &amp; SOPs</h3>
            <p>Review building use rules, security guidelines, and operating procedures directly in the portal.</p>
            <a class="link-cta" href="{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}">Open policies</a>
          </article>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Policies (explicit links) -->
  <section class="dbpo-policies-teaser">
    <div class="container">
      <h2 class="dbpo-section-title">Featured Policies</h2>
      <ul class="dbpo-policies-list">
        <li><a href="{{settings.drug_policy_url}}">Drug and Alcohol Policy</a></li>
        <li><a href="{{settings.clean_desk_policy_url}}">Clean Desk Policy</a></li>
        <li><a href="{{settings.locker_policy_url}}">Locker Policy (Contact Centre Agents)</a></li>
        <li><a href="{{settings.pci_policy_url}}">PCI Compliance Policy</a></li>
        <li><a href="{{settings.smoking_policy_url}}">Smoking Policy</a></li>
        <li><a href="{{settings.harassment_policy_url}}">Sexual Harassment Policy</a></li>
      </ul>
      <a class="btn btn-link view-all-policies" href="{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}">View all policies</a>
    </div>
  </section>

  <section id="workplace-policies" class="section workplace-policies py-5">
    <div class="container">
      <header class="section-header text-center mb-4">
        <h2><span class="accent-text">Workplace</span> Policies</h2>
        <p>Stay compliant with Digified standards for safety, security, and respect across our CX operations.</p>
      </header>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
          <article class="policy-card h-100">
              {{#if settings.drug_policy_icon_url}}
                <img class="policy-card-icon" src="{{settings.drug_policy_icon_url}}" alt="" role="presentation">
              {{/if}}
              <h3>Drug and Alcohol Policy</h3>
              <p>Maintains a zero-tolerance stance on impairment to protect colleagues, clients, and customers.</p>
              <div class="card-action">
              <a class="policy-link" href="{{settings.drug_policy_url}}">READ MORE</a>
              </div>
          </article>
        </div>

        <div class="col">
          <article class="policy-card h-100">
              {{#if settings.clean_desk_policy_icon_url}}
                <img class="policy-card-icon" src="{{settings.clean_desk_policy_icon_url}}" alt="" role="presentation">
              {{/if}}
              <h3>Clean Desk Policy</h3>
              <p>Requires agents to secure devices and clear sensitive materials whenever desks are unattended.</p>
              <div class="card-action">
              <a class="policy-link" href="{{settings.clean_desk_policy_url}}">READ MORE</a>
              </div>
          </article>
        </div>

        <div class="col">
          <article class="policy-card h-100">
              {{#if settings.locker_policy_icon_url}}
                <img class="policy-card-icon" src="{{settings.locker_policy_icon_url}}" alt="" role="presentation">
              {{/if}}
              <h3>Locker Policy for Contact Centre Agents</h3>
              <p>Explains locker assignments, permitted items, and inspection rights to keep operations secure.</p>
              <div class="card-action">
              <a class="policy-link" href="{{settings.locker_policy_url}}">READ MORE</a>
              </div>
          </article>
        </div>

        <div class="col">
          <article class="policy-card h-100">
              {{#if settings.pci_policy_icon_url}}
                <img class="policy-card-icon" src="{{settings.pci_policy_icon_url}}" alt="" role="presentation">
              {{/if}}
              <h3>PCI Compliance Policy</h3>
              <p>Details cardholder data safeguards, device controls, and monitoring to uphold PCI DSS obligations.</p>
              <div class="card-action">
              <a class="policy-link" href="{{settings.pci_policy_url}}">READ MORE</a>
              </div>
          </article>
        </div>

        <div class="col">
          <article class="policy-card h-100">
              {{#if settings.smoking_policy_icon_url}}
                <img class="policy-card-icon" src="{{settings.smoking_policy_icon_url}}" alt="" role="presentation">
              {{/if}}
              <h3>Smoking Policy</h3>
              <p>Defines approved smoking areas, break schedules, and penalties for non-compliance.</p>
              <div class="card-action">
              <a class="policy-link" href="{{settings.smoking_policy_url}}">READ MORE</a>
              </div>
          </article>
        </div>

        <div class="col">
          <article class="policy-card h-100">
              {{#if settings.harassment_policy_icon_url}}
                <img class="policy-card-icon" src="{{settings.harassment_policy_icon_url}}" alt="" role="presentation">
              {{/if}}
              <h3>Sexual Harassment Policy</h3>
              <p>Affirms Digified's zero-tolerance approach with reporting channels and investigation steps.</p>
              <div class="card-action">
              <a class="policy-link" href="{{settings.harassment_policy_url}}">READ MORE</a>
              </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  <section id="knowledge-base" class="knowledge-highlight py-5">
    <div class="container">
      <header class="section-header text-center mb-4">
        <h2><span class="accent-text">Knowledge</span> base spotlight</h2>
        <p>Browse categories, featured articles, and policy updates as they go live.</p>
      </header>

      <div class="kb-spotlight">
        <a href="{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}">Workplace Policies</a>
      </div>
      {{pagination}}

      {{#if promoted_articles}}
        <section class="articles promoted-spotlight mt-4">
          <h3 class="mb-3">Featured updates</h3>
          <ul class="article-list promoted-articles row row-cols-1 row-cols-md-2 g-3 list-unstyled">
            {{#each promoted_articles}}
              <li class="promoted-articles-item col">
                <a href="{{url}}" class="d-flex align-items-center gap-2">
                  {{title}}
                  {{#if internal}}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                      <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
                      <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 0 1 7 0v3.5"/>
                    </svg>
                  {{/if}}
                </a>
              </li>
            {{/each}}
          </ul>
        </section>
      {{/if}}
    </div>
  </section>

  <section class="section home-section activity py-5">
    <div class="container">
      {{#if settings.show_recent_activity}}
        {{recent_activity}}
      {{/if}}
    </div>
  </section>
</main>
