<h1 class="visibility-hidden">{{ help_center.name }}</h1>

<div id="tsparticles"></div>

<main id="main-content" class="home-main homepage-sections">
  {{!-- Anonymous users: existing sign-up hero --}}
  {{#unless signed_in}}
    <section class="access-hub-hero"{{#if settings.home_hero_image}} style="background-image:url('{{settings.home_hero_image}}');"{{/if}}>
      <div class="access-hub-hero__overlay"></div>
      <div class="access-hub-content container">
        <p class="access-hub-eyebrow">DigifyCX access hub</p>
        <h1>Choose the right sign-up experience</h1>
        <p class="access-hub-subtitle">
          Staff and tenants have dedicated forms so requests get routed to the right CXI team instantly.
        </p>
        <div class="access-hub-cards">
          <div class="access-hub-card access-hub-card-internal">
            <h2>Digify Staff / Internal</h2>
            <p>Request DigifyCX internal access.</p>
            <a class="btn btn-primary" href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.internal_form_id}}{{settings.internal_form_id}}{{else}}23590656709788{{/if}}">
              Internal Sign-up
            </a>
          </div>
          <div class="access-hub-card access-hub-card-tenant">
            <h2>Tenant / External</h2>
            <p>Request tenant access for external users.</p>
            <a class="btn btn-primary" href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.tenant_form_id}}{{settings.tenant_form_id}}{{else}}23590702845724{{/if}}">
              Tenant Sign-up
            </a>
          </div>
        </div>
      </div>
    </section>
  {{/unless}}

  {{!-- Signed-in users: segment-specific heroes (JS will toggle visibility) --}}
  {{#if signed_in}}
    <section class="access-hub-hero digify-hero digify-hero--internal js-internal-hero is-hidden"{{#if settings.home_hero_image}} style="background-image:url('{{settings.home_hero_image}}');"{{/if}}>
      <div class="access-hub-hero__overlay"></div>
      <div class="access-hub-content container">
        <p class="access-hub-eyebrow">DigifyCX internal</p>
        <h1>Welcome back, DigifyCX team</h1>
        <p class="access-hub-subtitle">
          Select an option below to access internal resources.
        </p>
        <div class="card-grid">
          <div class="card">
            <h3>Browse internal policies</h3>
            <p>Open the complete library of HR, IT, and CX policies.</p>
            <a
              href="{{#if settings.internal_policies_category_id}}{{page_path 'category' id=settings.internal_policies_category_id}}{{else}}{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}{{/if}}"
              class="btn"
            >
              VIEW POLICIES
            </a>
          </div>
          <div class="card">
            <h3>Access HR resources</h3>
            <p>Download forms and review employee benefits.</p>
            <a
              href="{{#if settings.hr_resources_section_id}}{{page_path 'section' id=settings.hr_resources_section_id}}{{else}}{{#if settings.internal_policies_category_id}}{{page_path 'category' id=settings.internal_policies_category_id}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}{{/if}}"
              class="btn"
            >
              HR RESOURCES
            </a>
          </div>
          <div class="card">
            <h3>Submit an IT/Facilities request</h3>
            <p>Log an IT issue or facilities request with our support team.</p>
            <a
              href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.internal_form_id}}{{settings.internal_form_id}}{{else}}23590656709788{{/if}}"
              class="btn"
            >
              SUBMIT REQUEST
            </a>
          </div>
          <div class="card">
            <h3>Check internal announcements</h3>
            <p>Stay updated with the latest internal news and alerts.</p>
            <a
              href="{{#if settings.internal_news_category_id}}/hc/{{help_center.locale}}/categories/{{settings.internal_news_category_id}}{{else}}{{page_path 'help_center'}}{{/if}}"
              class="btn"
            >
              SEE ANNOUNCEMENTS
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="access-hub-hero digify-hero digify-hero--tenant js-tenant-hero is-hidden"{{#if settings.home_hero_image}} style="background-image:url('{{settings.home_hero_image}}');"{{/if}}>
      <div class="access-hub-hero__overlay"></div>
      <div class="access-hub-content container">
        <p class="access-hub-eyebrow">DigifyCX tenant</p>
        <h1>Welcome back, DigifyCX tenant</h1>
        <p class="access-hub-subtitle">
          Access your tenancy resources below.
        </p>
        <div class="card-grid">
          <div class="card">
            <h3>View tenant policies</h3>
            <p>Read building, workspace, and conduct policies.</p>
            <a
              href="{{#if settings.tenant_policies_category_id}}{{page_path 'category' id=settings.tenant_policies_category_id}}{{else}}{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}{{/if}}"
              class="btn"
            >
              VIEW POLICIES
            </a>
          </div>
          <div class="card">
            <h3>Contact tenant support</h3>
            <p>Reach the CX Experts team for assistance.</p>
            <a
              href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.tenant_form_id}}{{settings.tenant_form_id}}{{else}}23590702845724{{/if}}"
              class="btn"
            >
              CONTACT SUPPORT
            </a>
          </div>
          <div class="card">
            <h3>Request services</h3>
            <p>Submit requests for network access, facilities, or maintenance.</p>
            <a
              href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.tenant_service_form_id}}{{settings.tenant_service_form_id}}{{else}}{{#if settings.tenant_form_id}}{{settings.tenant_form_id}}{{else}}23590702845724{{/if}}{{/if}}"
              class="btn"
            >
              REQUEST SERVICE
            </a>
          </div>
          <div class="card">
            <h3>Check building updates</h3>
            <p>See the latest announcements and alerts for tenants.</p>
            <a
              href="{{#if settings.tenant_news_category_id}}/hc/{{help_center.locale}}/categories/{{settings.tenant_news_category_id}}{{else}}{{page_path 'help_center'}}{{/if}}"
              class="btn"
            >
              SEE UPDATES
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="access-hub-hero digify-hero digify-hero--generic js-generic-hero is-hidden"{{#if settings.home_hero_image}} style="background-image:url('{{settings.home_hero_image}}');"{{/if}}>
      <div class="access-hub-hero__overlay"></div>
      <div class="access-hub-content container">
        <p class="access-hub-eyebrow">DigifyCX access hub</p>
        <h1>Welcome to DigifyCX Access Hub</h1>
        <p class="access-hub-subtitle">
          Use the options below to browse policies or contact support.
        </p>
        <div class="card-grid">
          <div class="card">
            <h3>Browse policies</h3>
            <p>Explore our general policies library.</p>
            <a
              href="{{#if settings.public_policies_category_id}}{{page_path 'category' id=settings.public_policies_category_id}}{{else}}{{#if settings.policies_root_url}}{{settings.policies_root_url}}{{else}}{{page_path 'section' id=23441547733404}}{{/if}}{{/if}}"
              class="btn"
            >
              BROWSE POLICIES
            </a>
          </div>
          <div class="card">
            <h3>Contact support</h3>
            <p>Need help? Submit a request to our team.</p>
            <a
              href="{{page_path 'new_request'}}?ticket_form_id={{#if settings.generic_form_id}}{{settings.generic_form_id}}{{else}}{{#if settings.external_support_form_id}}{{settings.external_support_form_id}}{{else}}23381214703004{{/if}}{{/if}}"
              class="btn"
            >
              CONTACT SUPPORT
            </a>
          </div>
        </div>
      </div>
    </section>
  {{/if}}
</main>
