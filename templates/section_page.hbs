<div class="container">
  <h1 class="section-title">{{section.name}}</h1>
  {{#if section.description}}
    <p class="section-description">{{section.description}}</p>
  {{/if}}
  
  <div class="policy-cards-grid">
    {{#each articles}}
      <article class="policy-card policy-card--color-{{@index}}">
        <div class="policy-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
          </svg>
        </div>
        <h2 class="policy-card__title">{{title}}</h2>
        {{#if body}}
          <p class="policy-card__excerpt">{{truncate body 120}}</p>
        {{/if}}
        <a href="{{url}}" class="policy-card__link">Read policy â†’</a>
      </article>
    {{/each}}
  </div>
</div>
