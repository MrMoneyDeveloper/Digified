<header class="digify-header">
  <div class="digify-header__inner container">
    <a class="digify-header__brand" href="/hc/{{help_center.locale}}">
      <img
        src="{{settings.digify_cx_logo}}"
        alt="Digify CX"
        class="digify-header__logo"
        data-digify-check="header-logo"
      >
      <span class="digify-header__brand-text">Digify CX Group</span>
    </a>

    <div class="digify-header__nav">
      {{#if signed_in}}
        <span class="digify-header__user">{{user_name}}</span>
        <div class="digify-header__quick-links">
          <div class="dropdown">
            <button class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">
              Quick Links
            </button>
            <ul class="dropdown-menu" role="menu">
              <!-- Internal Users -->
              <li class="nav-internal" role="menuitem">
                <a href="/hc/{{help_center.locale}}/requests/new?ticket_form_id=22989127409436">Request Support</a>
              </li>
              <li class="nav-internal" role="menuitem">
                <a href="/hc/{{help_center.locale}}/sections/23700658599580-Policies">Shared Policies</a>
              </li>
              <li class="nav-internal" role="menuitem">
                <a href="/hc/{{help_center.locale}}/categories/23700078037148">Internal Policies</a>
              </li>

              <!-- Tenant Users -->
              <li class="nav-tenant" role="menuitem">
                <a href="/hc/{{help_center.locale}}/requests/new?ticket_form_id=23381214703004">Request Support</a>
              </li>
              <li class="nav-tenant" role="menuitem">
                <a href="/hc/{{help_center.locale}}/sections/23700658599580-Policies">Shared Policies</a>
              </li>
              <li class="nav-tenant" role="menuitem">
                <a href="/hc/{{help_center.locale}}/categories/23700120243740">Tenant Policies</a>
              </li>
            </ul>
          </div>
        </div>
      {{/if}}

      <nav class="user-nav">
        {{#if signed_in}}
          <a href="https://cxe-internal.zendesk.com/access/logout?return_to=https://cxe-internal.zendesk.com/hc/{{help_center.locale}}" class="nav-link">Sign out</a>
        {{else}}
          <a href="https://cxe-internal.zendesk.com/hc/{{help_center.locale}}/signin?return_to=https://cxe-internal.zendesk.com/hc/{{help_center.locale}}" class="nav-link">Sign in</a>
        {{/if}}
      </nav>
    </div>
  </div>
</header>
