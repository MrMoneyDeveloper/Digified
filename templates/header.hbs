<header class="digify-header">
  <div class="digify-header__inner container">
    <a class="digify-header__brand" href="{{page_path 'help_center'}}">
      <img
        src="{{settings.digify_cx_logo}}"
        alt="Digify CX"
        class="digify-header__logo"
        data-digify-check="header-logo"
      >
      <span class="digify-header__brand-text">Digify CX Group</span>
    </a>

    <div class="digify-header__nav">
      {{#if signed_in}}
        <span class="digify-header__user">{{user_name}}</span>
        <div class="digify-header__quick-links">
          <div class="dropdown">
            <button class="dropdown-toggle" aria-haspopup="true" aria-expanded="false">
              Quick Links
            </button>
            <ul class="dropdown-menu" role="menu">
              <li class="nav-internal" role="menuitem">
                <a href="/hc/en-us/requests/new?ticket_form_id=54818657692444">Request Support</a>
              </li>
              <li class="nav-internal" role="menuitem">
                <a href="/hc/en-us/categories/23700129077660-digifycx-shared-building-policies">Shared Policies</a>
              </li>
              <li class="nav-internal" role="menuitem">
                <a href="/hc/en-us/categories/23700078037148-digifycx-internal-policies">Internal Policies</a>
              </li>

              <li class="nav-tenant" role="menuitem">
                <a href="/hc/en-us/requests/new?ticket_form_id=54818268462356">Request Support</a>
              </li>
              <li class="nav-tenant" role="menuitem">
                <a href="/hc/en-us/categories/23700129077660-digifycx-shared-building-policies">Shared Policies</a>
              </li>
              <li class="nav-tenant" role="menuitem">
                <a href="/hc/en-us/categories/23700120243740-digifycx-tenant-policies">Tenant Policies</a>
              </li>
            </ul>
          </div>
        </div>
      {{/if}}

      <nav class="user-nav">
        {{#if signed_in}}
          <a href="/access/logout" class="nav-link">Sign out</a>
        {{else}}
          <a href="/access/login" class="nav-link">Sign in</a>
        {{/if}}
      </nav>
    </div>
  </div>
</header>
