<style>
/* =============================================
   TRAINING ROOM BOOKING - MODERN UI
   Sleek, space-age design with smooth animations
   ============================================= */

:root {
  --primary-color: #2180cc;
  --primary-light: #4a9eff;
  --primary-dark: #0d5199;
  --accent-color: #00d9ff;
  --success-color: #00d97e;
  --error-color: #ff4757;
  --warning-color: #ffa502;
  --bg-light: #f8fbff;
  --bg-dark: #0f1419;
  --text-primary: #1a2332;
  --text-secondary: #6b7684;
  --border-color: #e8ecf1;
  --shadow-sm: 0 2px 8px rgba(0,0,0,0.08);
  --shadow-md: 0 8px 24px rgba(33, 128, 204, 0.12);
  --shadow-lg: 0 16px 48px rgba(0,0,0,0.15);
}

* {
  box-sizing: border-box;
}

/* ===== CONTAINER & LAYOUT ===== */

.training-booking-widget {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  background: linear-gradient(135deg, var(--bg-light) 0%, #f0f8ff 100%);
  border-radius: 16px;
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.booking-header {
  text-align: center;
  margin-bottom: 40px;
  animation: slideDown 0.7s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.booking-header h1 {
  font-size: 2.5em;
  color: var(--primary-dark);
  margin: 0 0 10px 0;
  font-weight: 700;
  letter-spacing: -0.5px;
}

.booking-header p {
  color: var(--text-secondary);
  font-size: 1.1em;
  margin: 0;
}

/* ===== CONTROLS (Date Picker + Refresh) ===== */

.booking-controls {
  display: flex;
  gap: 12px;
  margin-bottom: 30px;
  align-items: center;
  flex-wrap: wrap;
  animation: slideUp 0.8s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.control-group {
  display: flex;
  gap: 8px;
  align-items: center;
  flex: 1;
  min-width: 280px;
}

.control-group label {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95em;
}

.control-group input[type="date"] {
  flex: 1;
  padding: 10px 12px;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  font-size: 1em;
  transition: all 0.3s ease;
  background: white;
  color: var(--text-primary);
}

.control-group input[type="date"]:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(33, 128, 204, 0.1);
  transform: translateY(-2px);
}

.btn-refresh {
  padding: 10px 20px;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
  font-size: 0.95em;
}

.btn-refresh:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-color) 100%);
}

.btn-refresh:active:not(:disabled) {
  transform: translateY(0);
}

.btn-refresh:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-refresh.loading::after {
  content: '';
  display: inline-block;
  width: 12px;
  height: 12px;
  margin-left: 6px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* ===== SESSION GRID ===== */

.sessions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

@media (max-width: 768px) {
  .sessions-grid {
    grid-template-columns: 1fr;
  }
}

/* ===== SESSION CARD ===== */

.session-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  border: 2px solid var(--border-color);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
  animation: cardFadeIn 0.5s ease-out;
  animation-fill-mode: both;
}

.session-card:nth-child(1) { animation-delay: 0.05s; }
.session-card:nth-child(2) { animation-delay: 0.1s; }
.session-card:nth-child(3) { animation-delay: 0.15s; }
.session-card:nth-child(n+4) { animation-delay: 0.2s; }

@keyframes cardFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.session-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.session-card:hover::before {
  opacity: 1;
}

.session-card:hover {
  border-color: var(--primary-light);
  transform: translateY(-6px);
  box-shadow: var(--shadow-lg);
}

.session-card.is-booked {
  background: linear-gradient(135deg, #f0f8ff 0%, #e8f4ff 100%);
  border-color: var(--primary-color);
}

.session-card.is-cancelled {
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  border-color: #ffcccc;
  opacity: 0.7;
}

/* Session Card Content */

.session-header {
  margin-bottom: 12px;
}

.session-time {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 1.2em;
  font-weight: 700;
  color: var(--primary-dark);
  margin-bottom: 4px;
}

.session-time::before {
  content: '⏰';
  font-size: 1.1em;
}

.session-date {
  color: var(--text-secondary);
  font-size: 0.9em;
  font-weight: 500;
}

.session-topic {
  font-size: 1em;
  color: var(--text-primary);
  margin: 8px 0;
  font-weight: 600;
}

.session-meta {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin: 14px 0;
  font-size: 0.9em;
  color: var(--text-secondary);
}

.session-meta-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.session-meta-item strong {
  color: var(--text-primary);
  font-weight: 600;
}

.seat-info {
  padding: 8px 12px;
  background: rgba(33, 128, 204, 0.08);
  border-radius: 6px;
  font-weight: 500;
  color: var(--primary-dark);
}

.seat-info.full {
  background: rgba(255, 71, 87, 0.08);
  color: var(--error-color);
}

.reserved-by {
  padding: 8px 12px;
  background: rgba(0, 217, 126, 0.08);
  border-radius: 6px;
  color: var(--success-color);
  font-weight: 600;
  font-size: 0.9em;
}

/* Status Badge */

.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.8em;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-top: 8px;
  animation: badgePulse 2s ease-in-out infinite;
}

@keyframes badgePulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.85; }
}

.status-badge::before {
  content: '';
  width: 8px;
  height: 8px;
  border-radius: 50%;
  display: inline-block;
  animation: statusDot 1.5s ease-in-out infinite;
}

@keyframes statusDot {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.3); }
}

.badge-available {
  background: rgba(0, 217, 126, 0.15);
  color: var(--success-color);
  border: 1px solid rgba(0, 217, 126, 0.3);
}

.badge-available::before {
  background: var(--success-color);
}

.badge-full {
  background: rgba(255, 71, 87, 0.15);
  color: var(--error-color);
  border: 1px solid rgba(255, 71, 87, 0.3);
}

.badge-full::before {
  background: var(--error-color);
}

.badge-cancelled {
  background: rgba(255, 165, 2, 0.15);
  color: var(--warning-color);
  border: 1px solid rgba(255, 165, 2, 0.3);
}

.badge-cancelled::before {
  background: var(--warning-color);
}

/* Book Button in Card */

.btn-book {
  width: 100%;
  padding: 12px 16px;
  margin-top: 14px;
  border: none;
  border-radius: 8px;
  font-size: 0.95em;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  box-shadow: var(--shadow-sm);
  position: relative;
}

.btn-book:hover:not(:disabled) {
  transform: translateY(-3px);
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent-color) 100%);
}

.btn-book:active:not(:disabled) {
  transform: translateY(-1px);
}

.btn-book:disabled {
  background: linear-gradient(135deg, #ccc 0%, #aaa 100%);
  cursor: not-allowed;
  opacity: 0.6;
}

/* ===== MODAL ===== */

.modal-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  z-index: 1000;
  animation: fadeInOverlay 0.3s ease-out;
}

@keyframes fadeInOverlay {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.95);
  background: white;
  border-radius: 16px;
  padding: 40px;
  max-width: 500px;
  width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
  animation: modalSlideIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  z-index: 1001;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translate(-50%, -48%) scale(0.92);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-overlay.active {
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-header {
  margin-bottom: 20px;
  border-bottom: 2px solid var(--border-color);
  padding-bottom: 16px;
}

.modal-title {
  font-size: 1.6em;
  font-weight: 700;
  color: var(--primary-dark);
  margin: 0;
}

.modal-subtitle {
  color: var(--text-secondary);
  font-size: 0.9em;
  margin-top: 4px;
}

.session-info-box {
  background: linear-gradient(135deg, rgba(33, 128, 204, 0.05) 0%, rgba(0, 217, 255, 0.05) 100%);
  padding: 12px 14px;
  border-radius: 8px;
  margin: 16px 0;
  border-left: 4px solid var(--primary-color);
  font-size: 0.9em;
}

.session-info-box strong {
  display: block;
  color: var(--primary-dark);
  margin-bottom: 4px;
}

/* Form Elements */

.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6px;
  font-size: 0.95em;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 12px 14px;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  font-size: 0.95em;
  transition: all 0.3s ease;
  background: white;
  color: var(--text-primary);
  font-family: inherit;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(33, 128, 204, 0.1);
}

.form-input:read-only {
  background: #f0f4f8;
  color: var(--text-secondary);
}

.form-textarea {
  resize: vertical;
  min-height: 100px;
  font-family: inherit;
}

.form-help {
  font-size: 0.85em;
  color: var(--text-secondary);
  margin-top: 4px;
}

/* Modal Buttons */

.modal-buttons {
  display: flex;
  gap: 12px;
  margin-top: 28px;
}

.btn-submit,
.btn-cancel {
  flex: 1;
  padding: 12px 20px;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.95em;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-submit {
  background: linear-gradient(135deg, var(--success-color) 0%, #00b565 100%);
  color: white;
  box-shadow: var(--shadow-sm);
}

.btn-submit:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, #00e893 0%, #00d97e 100%);
}

.btn-submit:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.btn-submit.success::after {
  content: ' ✓';
  animation: checkmark 0.6s ease-out;
}

@keyframes checkmark {
  0% {
    opacity: 0;
    transform: scale(0.5);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.btn-cancel {
  background: #f0f4f8;
  color: var(--text-primary);
  border: 2px solid var(--border-color);
}

.btn-cancel:hover {
  background: var(--border-color);
  border-color: var(--text-secondary);
}

/* ===== ALERTS ===== */

.alert {
  padding: 14px 16px;
  border-radius: 8px;
  margin: 16px 0;
  font-size: 0.95em;
  display: flex;
  align-items: center;
  gap: 12px;
  animation: slideInAlert 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  border-left: 4px solid;
}

@keyframes slideInAlert {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.alert-success {
  background: rgba(0, 217, 126, 0.1);
  color: var(--success-color);
  border-left-color: var(--success-color);
}

.alert-success::before {
  content: '✓';
  font-weight: 700;
  font-size: 1.2em;
}

.alert-error {
  background: rgba(255, 71, 87, 0.1);
  color: var(--error-color);
  border-left-color: var(--error-color);
}

.alert-error::before {
  content: '⚠';
  font-size: 1.2em;
}

.alert-warning {
  background: rgba(255, 165, 2, 0.1);
  color: var(--warning-color);
  border-left-color: var(--warning-color);
}

.alert-warning::before {
  content: '!';
  font-weight: 700;
  font-size: 1.2em;
}

.alert-info {
  background: rgba(33, 128, 204, 0.1);
  color: var(--primary-dark);
  border-left-color: var(--primary-color);
}

.alert-info::before {
  content: 'ℹ';
  font-weight: 700;
  font-size: 1.2em;
}

.alert a {
  color: inherit;
  font-weight: 700;
  text-decoration: underline;
  margin-left: 4px;
}

/* ===== EMPTY STATE ===== */

.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: var(--text-secondary);
  animation: fadeIn 0.5s ease-out;
}

.empty-state-icon {
  font-size: 3em;
  margin-bottom: 16px;
}

.empty-state h3 {
  font-size: 1.3em;
  color: var(--text-primary);
  margin: 0 0 8px 0;
}

.empty-state p {
  margin: 0;
  font-size: 0.95em;
}

/* ===== RESPONSIVE ===== */

@media (max-width: 600px) {
  .training-booking-widget {
    padding: 16px;
  }

  .booking-header h1 {
    font-size: 1.8em;
  }

  .control-group {
    min-width: auto;
  }

  .modal-content {
    padding: 24px;
    width: 95%;
  }

  .sessions-grid {
    gap: 16px;
  }

  .session-card {
    padding: 16px;
  }
}

/* ===== DARK MODE (OPTIONAL) ===== */

@media (prefers-color-scheme: dark) {
  :root {
    --bg-light: #1a1f28;
    --bg-dark: #0f1419;
    --text-primary: #e8ecf1;
    --text-secondary: #9ca3af;
    --border-color: #2d3748;
  }

  .training-booking-widget {
    background: linear-gradient(135deg, #1a1f28 0%, #212d3a 100%);
  }

  .session-card {
    background: #242d38;
    border-color: #3d4a5f;
  }

  .session-card:hover {
    background: #2a3545;
    border-color: var(--primary-light);
  }

  .modal-content {
    background: #242d38;
  }

  .form-input,
  .form-textarea {
    background: #1a1f28;
    color: var(--text-primary);
    border-color: #3d4a5f;
  }

  .form-input:read-only {
    background: #1a1f28;
  }
}
</style>

