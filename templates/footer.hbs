<footer class="footer" id="contact">
  <div class="container py-5">
    <div class="row gy-4">
      <div class="col-lg-4 footer-column footer-brand">
        {{#link 'help_center' class='footer-logo d-inline-flex align-items-center gap-2'}}{{help_center.name}}{{/link}}
        <p class="footer-text mb-0 mt-3">Empowering CXI teams with fast answers, clear policies, and direct access to Digified specialists.</p>
      </div>

      <div class="col-sm-6 col-lg-4 footer-column footer-contact">
        <h3 class="mb-3">Contact</h3>
        <ul class="footer-list list-unstyled mb-0">
          {{#if settings.service_desk_phone_link}}
            <li>
              <span class="footer-label">Service Desk</span>
              <a href="tel:{{settings.service_desk_phone_link}}">{{#if settings.service_desk_phone_display}}{{settings.service_desk_phone_display}}{{else}}{{settings.service_desk_phone_link}}{{/if}}</a>
            </li>
          {{/if}}
          {{#if settings.service_desk_email}}
            <li>
              <span class="footer-label">Email</span>
              <a href="mailto:{{settings.service_desk_email}}">{{settings.service_desk_email}}</a>
            </li>
          {{/if}}
          {{#if settings.service_desk_hours}}
            <li>
              <span class="footer-label">Hours</span>
              <span>{{settings.service_desk_hours}}</span>
            </li>
          {{/if}}
        </ul>
      </div>

      <div class="col-sm-6 col-lg-4 footer-column footer-links">
        <h3 class="mb-3">Quick Links</h3>
        <ul class="footer-list list-unstyled mb-0">
          <li><a href="#hero">Home</a></li>
          <li><a href="#requests">Requests</a></li>
          <li><a href="#workplace-policies">Policies</a></li>
          <li><a href="#knowledge-base">Knowledge Base</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom row align-items-center pt-4 mt-4">
      <div class="col-md-6">
        <p class="mb-0">&copy; {{date 'now' format='YYYY'}} CXI (Digified). All rights reserved.</p>
      </div>
      <div class="col-md-6 text-md-end mt-3 mt-md-0">
        {{#if alternative_locales}}
          <div class="footer-language-selector d-inline-block">
            <div class="dropdown language-selector">
              <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                {{current_locale.name}}
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                {{#each alternative_locales}}
                  <li><a class="dropdown-item" href="{{url}}" dir="{{direction}}" rel="nofollow">{{name}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</footer>


<script src="{{asset 'bootstrap.bundle.min.js'}}"></script>

<script src="https://cdn.jsdelivr.net/npm/tsparticles@3/tsparticles.bundle.min.js"></script>
<script>
  (function () {
    function initParticles() {
      if (!window.tsParticles) {
        window.setTimeout(initParticles, 120);
        return;
      }
      if (!document.getElementById("tsparticles")) {
        return;
      }
      window.tsParticles.load("tsparticles", {
        fullScreen: { enable: true },
        detectRetina: true,
        particles: {
          number: { value: 60, density: { enable: true, area: 800 } },
          move: { enable: true, speed: 1.2 },
          size: { value: { min: 1, max: 3 } },
          links: { enable: true, distance: 140, opacity: 0.4 }
        }
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initParticles);
    } else {
      initParticles();
    }
  })();
</script>
